---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";

const blogPosts = await getCollection("blog");

const fallbackExcerpt =
  "Notes and learnings on software, AI experiments, and project building.";
---

<Layout
  title="Blog - mrdjan.net"
  description="Articles on software engineering, AI experiments, and project building."
  keywords="software engineering, AI, web development, Astro, blog"
  canonicalUrl="https://mrdjan.net/blog"
>
  <Header />
  <main class="py-20 px-4 sm:px-6 lg:px-8 bg-background">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog</h1>
        <p class="text-xl text-muted-foreground mb-4">
          Latest thoughts and insights
        </p>
        <div class="w-24 h-1 bg-gradient-to-r from-primary to-accent mx-auto">
        </div>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 auto-rows-fr">
        {
          blogPosts.map((post) => (
            <article class="bg-card border border-border rounded-lg overflow-hidden transform transition-transform duration-300 group hover:scale-[1.02] flex flex-col h-full">
              <div class="relative h-48 overflow-hidden bg-gradient-to-r from-secondary to-accent/20">
                <img
                  src="/hero_image.png"
                  alt="Blog post cover"
                  class="h-full w-full object-cover"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-black/5 to-transparent"></div>
              </div>

              <div class="p-6 flex flex-col flex-1">
                <div class="flex items-center text-sm text-muted-foreground mb-3">
                  <span>
                    {new Date(post.data.published_at).toLocaleDateString(
                      "en-US",
                      {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                      }
                    )}
                  </span>
                </div>

                <h3 class="text-xl font-bold mb-3 group-hover:text-primary transition-colors duration-200">
                  <a
                    href={`/blog/${post.data.slug || post.slug}`}
                    class="block"
                    data-plausible-event="Blog Post Click"
                    data-plausible-props={JSON.stringify({
                      title: post.data.title,
                      slug: post.data.slug || post.slug,
                      location: "blog-index"
                    })}
                    transition:animate="fade"
                  >
                    {post.data.title}
                  </a>
                </h3>

                <p class="text-muted-foreground mb-4 text-sm leading-relaxed">
                  {post.data.excerpt || fallbackExcerpt}
                </p>

                <div class="flex flex-wrap gap-2 mb-4">
                  {post.data.tags.map((tag: string) => (
                    <span class="px-2 py-1 bg-secondary/50 text-foreground text-xs font-medium rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>

                <a
                  href={`/blog/${post.data.slug || post.slug}`}
                  class="inline-flex items-center text-primary hover:text-primary/80 text-sm font-semibold transition-colors duration-200 mt-auto"
                  data-plausible-event="Blog Post Click"
                  data-plausible-props={JSON.stringify({
                    title: post.data.title,
                    slug: post.data.slug || post.slug,
                    location: "blog-index-read-more"
                  })}
                  transition:animate="fade"
                >
                  Read More
                  <svg
                    class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform duration-200"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </a>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </main>
  <Footer />
</Layout>
