---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-background/90 backdrop-blur-md"
>
  <nav class="mx-auto max-w-4xl px-6 py-4 flex items-center justify-between">
    <a
      href="/"
      class="font-mono text-sm font-medium text-foreground"
      data-plausible-event="Nav Link Click"
      data-plausible-props='{"location":"header","label":"Logo"}'
      transition:animate="fade"
    >
      mrdjan.net
    </a>

    <div class="flex items-center gap-6">
      <div class="hidden md:flex items-center gap-6">
        <a
          href="/"
          class="text-sm text-muted-foreground hover:text-foreground transition-colors"
          data-plausible-event="Nav Link Click"
          data-plausible-props='{"location":"header","label":"Home"}'
        >
          Home
        </a>
        <a
          href="/blog"
          class="text-sm text-muted-foreground hover:text-foreground transition-colors"
          data-plausible-event="Nav Link Click"
          data-plausible-props='{"location":"header","label":"Blog"}'
        >
          Blog
        </a>
      </div>

      <a
        href="/contact"
        class="px-4 py-2 bg-primary text-primary-foreground rounded-lg text-sm font-medium hover:bg-primary/90 transition-colors duration-200"
        data-plausible-event="CTA Click"
        data-plausible-props='{"location":"header","label":"Contact"}'
        transition:animate="fade"
      >
        Contact
      </a>
    </div>

    <button
      id="theme-toggle"
      class="p-2 rounded-lg bg-muted text-muted-foreground hover:bg-muted/80 transition-colors duration-200"
      aria-label="Toggle dark mode"
    >
      <svg
        data-theme-icon="sun"
        class="w-5 h-5 text-foreground"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
        ></path>
      </svg>
      <svg
        data-theme-icon="moon"
        class="w-5 h-5 text-foreground"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
        ></path>
      </svg>
    </button>

    <button
      id="mobile-menu-button"
      class="md:hidden p-2 rounded-lg bg-muted text-muted-foreground hover:bg-muted/80 transition-colors duration-200"
      aria-label="Toggle mobile menu"
    >
      <svg
        class="w-5 h-5 text-foreground"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>

  <div
    id="mobile-menu"
    class="md:hidden hidden bg-background border-b border-border"
  >
    <div class="px-4 py-2 space-y-2">
      <a
        href="/"
        class="block px-3 py-2 text-foreground/80 hover:text-primary transition-colors duration-200 font-medium"
        data-plausible-event="Nav Link Click"
        data-plausible-props='{"location":"mobile","label":"Home"}'
      >
        Home
      </a>
      <a
        href="/blog"
        class="block px-3 py-2 text-foreground/80 hover:text-primary transition-colors duration-200 font-medium"
        data-plausible-event="Nav Link Click"
        data-plausible-props='{"location":"mobile","label":"Blog"}'
      >
        Blog
      </a>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });

    // Close mobile menu when clicking on a link
    mobileMenu.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        mobileMenu.classList.add("hidden");
      });
    });
  }

  // Smooth scroll for in-page anchor links
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener("click", (e) => {
      const href = anchor.getAttribute("href");
      if (!href || href === "#") {
        return;
      }
      const target = document.querySelector(href);
      if (!target) {
        return;
      }
      e.preventDefault();
      target.scrollIntoView({
        behavior: "smooth",
        block: "start",
      });
    });
  });
</script>
